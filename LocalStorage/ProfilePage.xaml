<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalStorage.ProfilePage"
             Title="ProfilePage">

    <StackLayout Padding="20">
        <Image x:Name="profileImage" HeightRequest="150" WidthRequest="150" Aspect="AspectFill"  />
        <Button Text="Upload Picture" Clicked="UploadPicture"  BackgroundColor="Purple" Margin="0,10,0,0"/>

        <Entry x:Name="nameEntry" Placeholder="Name" Margin="0,10,0,0" />
        <Entry x:Name="surnameEntry" Placeholder="Surname" Margin="0,10,0,0" />
        <Entry x:Name="emailEntry" Placeholder="Email" Margin="0,10,0,0" />
        <Editor x:Name="bioEditor" Placeholder="Bio" AutoSize="TextChanges" Margin="0,10,0,0" />
        <Button Text="Save" Clicked="SaveProfile" BackgroundColor="Purple" />
    </StackLayout>
</ContentPage>